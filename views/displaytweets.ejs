  <div class="container" style="background: rgb(255,255,255,0.8);" >
    <h1 class="text-center alert text-info">Display Tweets/Statuses</h1>
    <div  style="background: rgb(255,255,255,0.9);margin-top:15px;">
      <h3>What will be displayed</h3>
      <p class="text-success">Currently the tweets containing the word <kbd>earthquake</kbd> will be displayed as
      a list in order of their origin.Information about username is also displayed along with the actual tweet.
      For trusting a user the criteria is that <code>friends count>500</code>,if its not the case then the tweet
      is ignored.</p>
    <center>
       <div class="btn-group btn-group-justified" >
        <input type="button" class="btn  btn-success" onclick="startdisplay()" name="start" value="Start" style="width:200px;"/>
        <input type="button" class="btn  btn-danger" onclick="stopdisplay()" name="stop" value="Stop" style="width:200px;"/>
        <input type="button" class="btn btn-primary" onclick="initiate()" name="start" value="Clear" style="width:200px;"/>
      </div>
    </center>
    <div class="card" style="margin-top:30px;">
      <div style="width:100%;min-height:410px;">
        <table class="table table-striped table-bordered table-responsive" id="tweetstable"></table>
      </div>
    </div>
        <script>
        function initiate(){
          $('#tweetstable').empty();
          $('#tweetstable').append("<tr><th>Username</th><th>Tweet</th><th>Created at</th><th>Location</th></tr>");
        }
        initiate();
        var addtweet=true;
        function startdisplay(){
          if(addtweet==false){
            addtweet=true;
            return;
          }
          $.get("loaddata", function(data, status){$('#tweetstable').append(data);});
          googleTranslateElementInit();
          setTimeout(startdisplay, 5000);
        }
        function stopdisplay(){
          addtweet=false;
        }

        //Additional feature translate page to engish
        function googleTranslateElementInit() {
         new google.translate.TranslateElement({pageLanguage: 'en'}, 'google_translate_element');
         }
        </script>
    </div>
  </div>
